<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/fragment_character_list_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:src="@drawable/icons_empire_50"
        android:contentDescription="@string/list_icon_str"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_character_list_item_tv"
        style="@style/PlaceholderTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        app:layout_constraintStart_toEndOf="@+id/fragment_character_list_item_img"
        app:layout_constraintTop_toTopOf="@+id/fragment_character_list_item_img"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_character_list_item_img"
        tools:text="Folden" />

    <ImageView
        android:id="@+id/nav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_icon"
        android:contentDescription="@string/navigation_icon_str"
        android:layout_marginEnd="@dimen/margin_20"
        app:layout_constraintTop_toTopOf="@+id/fragment_character_list_item_img"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_character_list_item_img"
        app:layout_constraintEnd_toEndOf="parent"
         />


    <View
        android:id="@+id/fragment_character_list_item_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>